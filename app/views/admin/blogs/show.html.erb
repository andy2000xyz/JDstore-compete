<p class="pull-right">
  <%= link_to "打开前台", blog_path(@blog), :target => "_blank", :class => "btn btn-primary" %>
</p>

<div class="row">
  <div class="col-9">
    <h1><%= @blog.title %></h1>
    <div>
      <p><%= @blog.author %></p>
      <p><%= @blog.category %></p>
      <p><%= @blog.created_at.strftime("%Y/%m/%d %I:%M %p") %></p>
      <%= sanitize @blog.content %>
    </div>
  </div>
  <div class="col-3">

  </div>
</div>
