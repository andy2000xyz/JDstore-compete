<%= form_tag search_blogs_path , :method => :get, :class => "blogs-search-form" do %>
  <div class="input-group">
    <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="Search Blog..">

    <span class="input-group-btn">
      <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-search"></span>
      </button>
    </span>
  </div>
<% end %>
