
<div class="container" style="height: 600px">
  <div class="row content">
    <div class="col-md-3 sidenav">
      <%= render :partial => "blogs/search_bar" %>
    </div>

    <div class="col-md-9">

      <div class="search-result">

        <h4> 搜索结果 </h4><br>

        <table class="table table-borderd">
          <% @blogs.each do |blog| %>
            <%= link_to(render_highlight_content(blog,@query_string),blog_path(blog)) %>
            <hr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
