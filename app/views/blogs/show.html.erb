
<head>
  <title>Li jian's Blog</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <!-- <link rel="stylesheet" href="assets/bootstrap.min.css">
  <script src="assets/jquery.min.js"></script>
  <script src="assets/bootstrap.min.js"></script> -->

</head>
<body>

<div class="container">
  <div class="row content">
    <div class="col-md-3 sidenav">
      <h4>我的博客</h4>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="/blogs">首页</a></li>
        <li><a href="#section2">归档</a></li>
        <li><a href="#section3">标签</a></li>
        <li><a href="#section4">搜索</a></li>
      </ul><br>
      <%= render :partial => "blogs/search_bar" %>
      <br>
      <div class="previous"><%= link_to "上一篇：#{@previous.title}", blog_path(@previous) %></div>
      <div class="next"><%= link_to "下一篇：#{@next.title}", blog_path(@next) %></div><br>
      <h4>历史文章</h4>
      <ol class="list-unstyled">
        <% @blogs.each do |blog| %>
          <li>
            <%= link_to blog.title, blog_path(blog) %>
          </li>
        <% end %>
      </ol>

    </div>

    <div class="col-md-9">
      <h4><small>RECENT POSTS</small></h4>
      <hr>
      <h2><%= @blog.title %></h2><br>
      <h5>作者：<%=@blog.author %></h5>
      <h5><span class="glyphicon glyphicon-time"></span><%= @blog.created_at.strftime("%Y/%m/%d %I:%M %p") %></h5>
      <h5><span class="label label-danger"><%= @blog.category.try(:name) %></span></h5><br>
      <p><%= sanitize @blog.content %></p><br>

      <hr>
      <span class="pull-right"><%= social_share_button_tag(@blog.title) %></span><br>
      <h4>Leave a Comment:</h4>
      <%= render :partial => "comments/form" %><br>
      <p><span class="badge"><%= @blog.comments.count %></span> Comments:</p><br>
      <%= render :partial => "comments/comment" %>

    </div>
  </div>
</div>

</body>
