
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <!-- <link rel="stylesheet" href="assets/bootstrap.min.css"> -->
  <!-- <script src="assets/jquery.min.js"></script> -->
  <!-- <script src="assets/bootstrap.min.js"></script> -->

</head>
<body>

<div class="container">
  <div class="row content">
    <div class="col-md-3 sidenav">
      <h4>Alexander's Blog</h4>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="/blogs">首页</a></li>
        <li><a href="#section2">归档</a></li>
        <li><a href="#section3">标签</a></li>
        <li><a href="#section4">搜索</a></li>
      </ul><br>
      <%= render :partial => "blogs/search_bar" %>
      <br>
      <div class="previous"><%= link_to "上一篇：#{@previous.title}", blog_path(@previous) %></div>
      <div class="next"><%= link_to "下一篇：#{@next.title}", blog_path(@next) %></div>

    </div>

    <div class="col-md-9">
      <h4><small>RECENT POSTS</small></h4>
      <hr>
      <h2><%= @blog.title %></h2>
      <h5 class="pull-right"><span class="glyphicon glyphicon-time"></span><%= @blog.created_at.strftime("%Y/%m/%d %I:%M %p") %></h5>
      <h5><span class="label label-danger"><%= @blog.category.try(:name) %></span></h5><br>
      <p><%= sanitize @blog.content %></p>
      <br><br>

      <hr>

      <p><span class="badge"><%= @blog.comments.count %></span> Comments:</p><br>

      <%= render "comments/form" %><br>
      <%= render "comments/comment" %>
      <%= yield %>

    </div>
  </div>
</div>

</body>
