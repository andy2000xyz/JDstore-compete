<!DOCTYPE html>
<html>
<head>
  <title>Datalab 后台</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'admin', media: 'all', :async => true%>
  <%= javascript_include_tag 'admin', :async => true %>
  <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="container-fluid">
    <%= render "common/navbar" %>
    <div class="row">
      <div class="col-md-2">
        <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
          <li> <%= link_to("Products", admin_products_path) %> </li>
          <li> <%= link_to("Orders", admin_orders_path) %> </li>
          <li> <%= link_to("blogs", admin_blogs_path) %> </li>
          <li> <%= link_to("blog_categories", admin_categories_path) %> </li>
        </ul>
      </div>
      <div class="col-md-8">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
